<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <TextView

       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="30dp"
       android:textSize="20dp"
       android:text="User id:"
       android:layout_marginLeft="30dp"
       android:id="@+id/textView_id" />
    <EditText
        android:id="@+id/edittext_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_alignBottom="@+id/textView_id"
        android:layout_toRightOf="@+id/textView_id"
        android:layout_toEndOf="@+id/textView_id" />
    <TextView
        android:id="@+id/textView_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext_id"
        android:layout_marginLeft="30dp"
        android:text="data"
        android:textSize="20dp"
        android:layout_marginTop="30dp"/>
    <EditText
        android:id="@+id/edittext_data"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignBaseline="@+id/textView_data"
        android:layout_alignBottom="@+id/textView_data"
        android:layout_alignLeft="@+id/edittext_id"
        android:layout_alignStart="@+id/edittext_id" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Username:"
    android:textSize="20dp"
    android:layout_marginTop="32dp"
    android:layout_below="@+id/edittext_data"
    android:layout_alignLeft="@+id/textView_data"
    android:layout_alignStart="@+id/textView_data"
    android:id="@+id/textView2" />
    <EditText
        android:id="@+id/edittext_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/edittext_data"
        android:layout_alignStart="@+id/edittext_data"
        android:layout_marginStart="12dp" />
    <TextView
        android:id="@+id/text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email"
        android:textSize="20dp"
        android:layout_marginTop="190dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_toLeftOf="@+id/edittext_id"
        android:layout_toStartOf="@+id/edittext_id" />
    <EditText
        android:layout_width="200dp"
        android:id="@+id/edittext1"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"

        android:layout_alignLeft="@+id/edittext_data"
        android:layout_alignStart="@+id/edittext_data"/>
    <Button
        android:id="@+id/btn_add"
        android:layout_marginTop="25dp"
        android:text="add"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edittext1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="15dp"
        android:text="update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_add"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/update_btn" />
    <Button
        android:id="@+id/delete_btn"
        android:text="delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <Button
        android:id="@+id/view_all_table_1"
        android:text="showall for table one"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/view_all_table_2"
        android:text="showall for table two"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />




</RelativeLayout>
