<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.anjaline.facebookgooglesignin.MainActivitysigninall">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:gravity="center_horizontal">

        <com.facebook.login.widget.LoginButton
            android:id="@+id/facebook_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp" />

        <!--google-->
        <com.google.android.gms.common.SignInButton
            android:id="@+id/googlebtn_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/facebook_login_button"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp" />

        <!--linkedin-->
        <Button
            android:id="@+id/login_li_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/googlebtn_sign_in"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"
            android:background="@drawable/linkdin"
            android:textSize="30dp" />


    </RelativeLayout>
</ScrollView>

